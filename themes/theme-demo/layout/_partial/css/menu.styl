//nav
.menu-section {
  z-index: 200;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  min-width: 1200px;
  height: 60px;
  overflow: hidden;
}
.nav {
  position: relative;
  min-width: 1200px;
  .name {
    position: absolute;
    top: 0;
    left: 60px;
    display: inline-block;
    margin-left: 10px;
    margin-top: 5px;
    height: 50px;
    line-height: 50px;
    color: #000000;
    font-size: 25px;
  }
  .one,
  .two,
  .three {
    width: 100%;
    height: 5px;
    background-color: #000000;
    margin: 6px auto;
    backface-visibility: hidden;
    transition-duration: 0.3s;
    -moz-transition-duration: 0.3s;
    -webkit-transition-duration: 0.3s;
  }
  .menu-toggle {
    width: 40px;
    height: 30px;
    position: absolute;
    top: 10px;
    right: 60px;
    cursor: pointer;
  }
  .menu-toggle.on .one {
    transform: rotate(45deg) translate(7px, 7px);
    -moz-transform: rotate(45deg) translate(7px, 7px);
    -webkit-transform: rotate(45deg) translate(7px, 7px);
    background-color: #ffffff;
  }
  .menu-toggle.on .two {
    opacity: 0;
  }
  .menu-toggle.on .three {
    transform: rotate(-45deg) translate(8px, -10px);
    -moz-transform: rotate(-45deg) translate(8px, -10px);
    -webkit-transform: rotate(-45deg) translate(8px, -10px);
    background-color: #ffffff;
  }
  .menu-section.on {
    z-index: 10;
    width: 100%;
    height: 100%;
    display: block;
    background-color: #ffffff;
    position: absolute;
  }
  .searchContainer {
    position: absolute;
    top: 20px;
    right: 118px;
    width: 350px;
    display: inline-block;
  }
  .search {
    position: absolute;
    right: -5px;
    width: 0px;
    border: 0;
    border-bottom: 1px solid #000000;
    outline: none;
    transition: width 0.5s ease;
    -moz-transition: width 0.5s ease;
    -webkit-transition: width 0.5s ease;
  }
  .searchBtn {
    position: absolute;
    top: -5px;
    right: 5px;
    width: 30px;
    height: 28px;
    border: 0;
    outline: none;
    background: none;
  }
  .icon-sousuo {
    font-size: 25px;
  }
  .searchDown {
    display: none;
  }
}

//menu
.menuContainer {
  z-index: 100;
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 1;
  width: 100%;
  .menuBg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    background: #000000;
    opacity: 0.7;
  }
  .menu {
    position: absolute;
    margin: 0;
    padding: 0;
    width: 100%;
    overflow: hidden;
    .about,
    .img,
    .blog,
    .contact {
      top: 0;
    }
    .list {
      position: absolute;
      top: 0; 
      transform: skewX(-15deg) translateX(-80px);
      -moz-transform: skewX(-15deg) translateX(-80px);
      -webkit-transform: skewX(-15deg) translateX(-80px);
      transition: all 1s ease;
      -moz-transition: all 1s ease;
      -webkit-transition: all 1s ease;
      background: #ffffff;
      text-align: center;
      font-size: 50px;
      list-style: none;
      opacity: 0;
      a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        text-decoration: none;
        cursor: pointer;
        color: #000000;
      }
    }
    .list:nth-child(2n) {
      background: #000000;
      a {
        color: #ffffff;
      }
    }
    .list:hover {
      opacity: 1;
      transform: skewX(-15deg) translateX(-90px);
      -moz-transform: skewX(-15deg) translateX(-90px);
      -webkit-transform: skewX(-15deg) translateX(-90px);
    }

    //呼入动画
    .fadeInUp {
      opacity: 0.8;
      animation: fadeInUp 2s ease;
      -moz-animation: fadeInUp 2s ease;
      -webkit-animation: fadeInUp 2s ease;
    }
    @keyframes fadeInUp {
      0%{
        opacity: 0;
        transform: skewX(-15deg) translateX(-100px);
        -moz-transform: skewX(-15deg) translateX(-100px);
        -webkit-transform: skewX(-15deg) translateX(-100px);
      }
      100%{
        opacity: 0.8;
        transform: skewX(-15deg) translateX(-80px);
        -moz-transform: skewX(-15deg) translateX(-80px);
        -webkit-transform: skewX(-15deg) translateX(-80px);
      }
    }
    
    //呼出动画
    .fadeInDown {
      opacity: 0;
      animation: fadeInDown 2s ease;
      -moz-animation: fadeInDown 2s ease;
      -webkit-animation: fadeInDown 2s ease;
    }
    @keyframes fadeInDown {
      0%{
        opacity: 0.8;
        transform: skewX(-15deg) translateX(-80px);
        -moz-transform: skewX(-15deg) translateX(-80px);
        -webkit-transform: skewX(-15deg) translateX(-80px);
      }
      100%{
        opacity: 0;
        transform: skewX(-15deg) translateX(-100px);
        -moz-transform: skewX(-15deg) translateX(-100px);
        -webkit-transform: skewX(-15deg) translateX(-100px);
      }
    }
  }
}

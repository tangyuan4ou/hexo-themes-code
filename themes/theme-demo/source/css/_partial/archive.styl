.tagContainer {
  .tagContent {
    width: 800px;
    margin: 0 auto;
    height: 50px;
    overflow-y:hidden;
    overflow-x:auto;
    white-space: nowrap;
    padding: 0
  }
  .tagM {
    margin-right: 10px;
    display: inline-block;
    font-size: 22px;
    text-align: center;
    list-style-type: none;
    color: #e9f1f6;
  }
  .tags {
    position: relative;
    display: inline-block;
    margin: 15px 10px;
    padding: 0px 10px;
    font-size: 22px;
    text-align: center;
    list-style-type: none;
    cursor: pointer;
    .tagHref {
      color: #e9f1f6;
      text-decoration: none;
      &::after {
        position: absolute;
        bottom: 0; left: 0;
        content: '';
        width: 100%;
        height: 2px;
        background-color: #e9f1f6;
        transform: scaleX(0);
        transition: .4s ease-in-out;
      }
      &:hover {
        &::after{
          transform: scaleX(1);
        }
      }
    }
  }
}